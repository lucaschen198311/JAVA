package com.codingdojo.projectone;

public class HumanTest {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Human person = new Human(3, 3, 3, 100);
		Ninja ninja = new ninja();
		Wizard wizard = new Wizard();
		Samurai samurai = new Samurai();
		wizard.heal(person);
		wizard.fireball(person);
		System.out.println("the person's health value is: " + person.getHealth());
		ninja.steal(person);
		System.out.println("the person's health value is: " + person.getHealth());
		System.out.println("the ninja's health value is: " + ninja.getHealth());
		ninja.runAway();
		System.out.println("the ninja's health value is: " + ninja.getHealth());
		samurai.deathBlow(person);
		System.out.println("the person's health value is: " + person.getHealth());
		samurai.meditate();
		System.out.println("the samurai's health value is: " + person.getHealth());
		System.out.println("There are " + Samurai.howMany() + " samurais generated so far!");
		//ninja.attack(samurai);
		//ninja.attack(samurai);
		//System.out.println("The health of samurai will be at " + samurai.getHealth());
	}

}
